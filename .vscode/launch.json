    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\node_modules\\npm-changelog\\bin\\bin.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "args": [
                "--titled"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "convert debug",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\node_modules\\npm-changelog\\bin\\bin.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "args": [
                "--convert",
                "--lined"
            ]
        }        
    ]
}